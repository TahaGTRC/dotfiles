# Define the default PCM (audio stream) device
pcm.!default {
    type plug  # Use the 'plug' plugin for automatic format conversion
    slave.pcm {
        type hw       # Use the hardware device directly
        card 0        # Specify the sound card index (0 in this case)
        device 0      # Specify the device index (check available sound devices with `aplay -l`, replace with index 'card 0: PCH [HDA Intel PCH], device 3: HDMI 0 [HDMI 0]' => device 3)
    }
}

# Define the default control device
ctl.!default {
    type hw       # Use the hardware device directly
    card 0        # Specify the sound card index (0 in this case)
}

